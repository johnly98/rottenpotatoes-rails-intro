-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => "#{@sort_by == "title"? 'hilite' : ""}"}
        = link_to 'Movie Title', movies_path(:sort => :by_title), :method => :get
      %th
        Rating
      %th{:class => "#{@sort_by == "date" ? 'hilite' : ""}"}
        = link_to 'Release Date', movies_path(:sort => :by_date), :method => :get
      %th 
        More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
